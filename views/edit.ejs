<%- include("partials/header"); -%>
<div class="container"> 
    <h1 style="text-align: center; margin-top: 100px;">Edit <%= blog.title %></h1>
    <br>
    
    <div class="jumbotron">
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="title">Title of the blog</label>
                <input type="text" name="blog[title]" class="form-control" id="title" aria-describedby="titleHelp" value="<%= blog.title%>" style="width: 75%;">
                <small id="titleHelp" class="form-text text-muted">This will be the heading of the blog!</small>
              </div>
              <div class="form-group">
                <label for="title">Add an Image!</label>
                <input type="text" name="blog[image]" class="form-control" id="title"  value="<%=blog.image%>" style="width: 75%;">
                
              </div>
              <div class="form-group">
                <label for="title">The main content goes here</label>
               <textarea name="blog[body]" class="form-control" id="title" cols="30" rows="10"><%=blog.body%></textarea>
              </div>
            
            <input class="btn btn-primary" type="submit" name="" id="">
            
            
            </form>
    
    </div>

</div>

    

<%- include("partials/footer"); -%>
